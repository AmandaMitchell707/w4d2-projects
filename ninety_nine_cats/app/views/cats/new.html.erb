<h1> Make a new cat! </h1>

<form action='<%= cats_url %>' method='post'>
  
  <input type='hidden' name='authenticity_token' value='<% form_authenticity_token %>'>
  
  <label> name: 
    <input type='text' name='cat[name]' value=''>
  </label>
  <br>
  
  <label> birth date: 
    <input type='date' name='cat[birth_date]' value=''>
  </label>
  <br>
  
  <label for='color_choice'>color:</label>
    <select id='color_choice' name='cat[color]'> 
      <option disabled selected value=''>--select a color--</option>
      <option value='black'>black</option>
      <option value='red'>red</option>
      <option value='orange'>orange</option>
      <option value='brown'>brown</option>
      <option value='white'>white</option>
      <option value='grey'>grey</option>
    </select>  
  </label>
  <br>
  
  <label> sex: 
    <input type='radio' name='cat[sex]' value='F'>female
    <input type='radio' name='cat[sex]' value='M'>male
  </label>
  <br>
      
  <label> description: 
    <textarea name='cat[description]' value=''></textarea>
  </label>
  <br>
  
  <input type='submit' value='Submit your new cat'>
</form>

