<h1> Edit this cat! </h1>

<form action='<%= cat_url %>' method='post'>
  <input type='hidden' name='_method' value='PATCH'>
  
  <input type='hidden' name='authenticity_token' value='<% form_authenticity_token %>'>
  
  <label> name: 
    <input type='text' name='cat[name]' value='<%= @cat.name %>'>
  </label>
  <br>
  
  <label> birth date: 
    <input type='date' name='cat[birth_date]' value='<%= @cat.birth_date %>'>
  </label>
  <br>
  
  <label for='color_choice'>color:</label>
    <select id='color_choice' name='cat[color]'> 
      <option disabled value=''>--select a color--</option>
      <option value='black' <%= @cat.color == 'black' ? 'selected' : '' %> >black</option>
      <option value='red' <%= @cat.color == 'red' ? 'selected' : '' %> >red</option>
      <option value='orange' <%= @cat.color == 'orange' ? 'selected' : '' %> >orange</option>
      <option value='brown' <%= @cat.color == 'brown' ? 'selected' : '' %> >brown</option>
      <option value='white' <%= @cat.color == 'white' ? 'selected' : '' %> >white</option>
      <option value='grey' <%= @cat.color == 'grey' ? 'selected' : '' %> >grey</option>
    </select>  
  </label>
  <br>
  
  <label> sex: 
    <input type='radio' name='cat[sex]' value='F'>female
    <input type='radio' name='cat[sex]' value='M'>male
  </label>
  <br>
      
  <label> description: 
    <textarea name='cat[description]' value='<%= @cat.description %>'></textarea>
  </label>
  <br>
  
  <input type='submit' value='Edit your cat!'>
</form>
